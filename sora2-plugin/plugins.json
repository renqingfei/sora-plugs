{
  "version": "1.0.0",
  "lastUpdated": "2025-01-16",
  "baseUrl": "",
  "plugins": [
    {
      "id": "sora2-plugin",
      "version": "1.0.0",
      "name": "Sora-2 视频生成",
      "type": "video",
      "host": "http://127.0.0.1",
      "port": 13005,
      "exe": "sora2-plugin.exe",
      "description": "基于云雾API的Sora-2视频生成插件，支持图生视频",
      "fileName": "sora2-plugin-1.0.0.zip",
      "isSync": false,
      "params": [],
      "options": [
        {
          "key": "sessionId",
          "label": "API Token",
          "type": "password",
          "required": true,
          "hidden": false,
          "isHeader": true,
          "default": "",
          "placeholder": "请输入云雾API Token",
          "scope": "video"
        },
        {
          "key": "orientation",
          "label": "视频方向",
          "type": "select",
          "required": true,
          "hidden": false,
          "isHeader": false,
          "default": "landscape",
          "scope": "video",
          "options": [
            { "label": "横屏", "value": "landscape" },
            { "label": "竖屏", "value": "portrait" }
          ]
        },
        {
          "key": "size",
          "label": "分辨率",
          "type": "select",
          "required": true,
          "hidden": false,
          "isHeader": false,
          "default": "large",
          "scope": "video",
          "options": [
            { "label": "1080p", "value": "large" },
            { "label": "720p", "value": "small" }
          ]
        },
        {
          "key": "duration",
          "label": "视频时长",
          "type": "select",
          "required": true,
          "hidden": false,
          "isHeader": false,
          "default": "8",
          "scope": "video",
          "options": [
            { "label": "4秒", "value": "4" },
            { "label": "8秒", "value": "8" },
            { "label": "12秒", "value": "12" }
          ]
        },
        {
          "key": "model",
          "label": "模型",
          "type": "select",
          "required": true,
          "hidden": false,
          "isHeader": false,
          "default": "sora-2",
          "scope": "video",
          "options": [
            { "label": "Sora-2", "value": "sora-2" },
            { "label": "Sora-2 Pro", "value": "sora-2-pro" }
          ]
        },
        {
          "key": "watermark",
          "label": "水印",
          "type": "select",
          "required": false,
          "hidden": false,
          "isHeader": false,
          "default": "false",
          "scope": "video",
          "options": [
            { "label": "无水印", "value": "false" },
            { "label": "有水印", "value": "true" }
          ]
        }
      ]
    }
